%h1 #{@legislator.title} #{@legislator.name} #{@legislator.name_suffix}
%h2= "\"#{@legislator.nickname}\"" unless @legislator.nickname.blank?
%br

= render partial: 'shared/tag', locals: { item_id: @legislator.bioguide_id, tagged: @legislator.tagged?(current_user), tag_id: @legislator.tag_id(current_user) }

%h4 STATE
%p #{@legislator.state}

%h4= "LEADERSHIP ROLE" unless @legislator.leadership_role.blank?
%p= "#{@legislator.leadership_role}" unless @legislator.leadership_role.blank?

%h4 BIOGUIDE ID
%p #{@legislator.bioguide_id}

%h4 CHAMBER
%p #{@legislator.chamber}

%h4= "DISTRICT" unless @legislator.district.blank?
%p= "#{@legislator.district}" unless @legislator.district.blank?

%h4 TERM START
%p #{@legislator.term_start}

%h4 TERM END
%p #{@legislator.term_end}

%h4 PARTY
%p #{@legislator.party}

%h4 BIRTHDAY
%p #{@legislator.birthday}

%h4 CONTACT FORM
= link_to "#{@legislator.contact_form}", "#{@legislator.contact_form}"

%h4 OFFICE
%p #{@legislator.office}

%h4 WEBSITE
= link_to "#{@legislator.website}", "#{@legislator.website}"

%h3 Bills Sponsored

= render partial: 'shared/bills'
